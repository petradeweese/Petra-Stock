# Schwab API OAuth credentials
SCHWAB_CLIENT_ID=
SCHWAB_CLIENT_SECRET=
SCHWAB_REDIRECT_URI=
SCHWAB_ACCOUNT_ID=
SCHWAB_REFRESH_TOKEN=
# Database connection URL
DATABASE_URL=sqlite:///bars.db
# Include pre/post-market bars when true
SCHWAB_INCLUDE_PREPOST=false
# Seconds to cache DB reads in-process
DB_CACHE_TTL=120
# Run database migrations on startup
RUN_MIGRATIONS=true
# Max concurrent HTTP requests
HTTP_MAX_CONCURRENCY=10
# Scheduler job timeout in seconds
JOB_TIMEOUT=30
# Enable Prometheus /metrics endpoint
METRICS_ENABLED=false

# Favorites alert delivery configuration
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_FROM_NUMBER=
ALERT_SMS_TO=
ALERT_CHANNEL=Email
ALERT_OUTCOMES=hit
# Forward-test recency weighting (off | exp)
FORWARD_RECENCY_MODE=off
FORWARD_RECENCY_HALFLIFE_DAYS=30
